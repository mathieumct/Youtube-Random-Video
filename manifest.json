{
    "manifest_version": 3,
    "name": "YouTube Random Video",
    "version": "1.0.0",
    "description": "Randomly pick a video from your YouTube feed",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Get random YouTube video"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}